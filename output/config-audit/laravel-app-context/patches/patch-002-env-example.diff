 # Verify audience claim in tokens
 JWT_VERIFY_AUD=true
+
+# Token sources (comma-separated): header, query, cookie
+JWT_TOKEN_SOURCES=header,query,cookie
+
+# Development fallback when RSA keys are missing
+JWT_DEV_FALLBACK=false
+JWT_DEV_ALGO=HS256
+JWT_DEV_SECRET=base64:your-app-key
+
+# Ignore scheme when validating issuer (useful behind proxies)
+JWT_IGNORE_ISSUER_SCHEME=false
